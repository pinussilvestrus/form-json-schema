{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "/#component/rules-required-properties",
  "allOf": [
    {
      "if": {
        "$ref": "../field-types/inputs.json"
      },
      "then": {
        "required": [
          "key"
        ]
      }
    },
    {
      "if": {
        "properties": {
          "type": {
            "const": "datetime"
          }
        },
        "required": [
          "type"
        ]
      },
      "then": {
        "required": [
          "subtype"
        ]
      }
    },
    {
      "if": {
        "$ref": "../field-types/multi-inputs.json"
      },
      "then": {
        "anyOf": [
          {
            "required": [
              "values"
            ]
          },
          {
            "required": [
              "valuesKey"
            ]
          },
          {
            "required": [
              "valuesExpression"
            ]
          }
        ]
      }
    }
  ]
}